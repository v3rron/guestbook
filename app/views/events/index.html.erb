<div class="page-header">
  <h1>Events</h1>
</div>
<%= link_to 'New Event', new_event_path, class: 'btn btn-success' %>
<br>
<br>
<% if @events.exists? %>
    <div class="row" ng-controller='EventsCtrl'>
      <div class="main-event-li col-md-4" ng-repeat='event in events'>
        <h3>{{ event.name }}</h3>
        <p>{{event.description}}</p>
        <div class="btn-group">
          <%= link_to 'Show', '{{event.url}}', class: 'btn btn-default' %>
          <%= link_to 'Edit', '{{event.url}}/edit', class: 'btn btn-default' %>
          <%= link_to 'Destroy', '{{event.url}}', method: :delete, rel: 'nofollow', data: {confirm: 'Are you sure?'}, class: 'btn btn-danger delete_event' %>
        </div>
        <div class="pull-right">Guests: {{event.guests.length}}</div>
      </div>
    </div>
<% end %>