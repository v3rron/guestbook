<div class="page-header">
  <h1>Events</h1>
</div>
<%= link_to 'New Event', new_event_path, class: 'btn btn-success' %>
<br>
<br>
<% if @events.exists? %>
    <div class="row">
      <% @events.each do |event| %>
          <div class="main-event-li col-md-4">
            <h3><%= event.name %></h3>
            <p><%= truncate(event.description, :length => 350, :separator => ' ', :omission => ' ...') %></p>
            <div class="btn-group">
              <%= link_to 'Show', event, class: 'btn btn-default' %>
              <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-default' %>
              <%= link_to 'Destroy', event, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
            </div>
            <div class="pull-right">Guests: <%= event.guests.size %></div>
          </div>
      <% end %>
    </div>
<% end %>